<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" dir="$language_rtl ? 'rtl' : 'ltr'" cms:eval="lang,dir">
		<head>
			<title><cms:text constant="site_title"/></title>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body>
			<header>
				<h1><cms:text constant="main_title"/></h1>

				<cms:desktop>
					<a
						class="contact"
						href="javascript:void(0)"
						>
						<cms:text constant="button_contact"/>
					</a>
				</cms:desktop>

				<cms:mobile>
					<a
						class="contact"
						href="#form_wrap"
						>
						<cms:text constant="button_contact"/>
					</a>
				</cms:mobile>

				<cms:module
						name="downloads"
						action="show_list"
						template="parts/downloads.xml"
						/>

				<cms:desktop>
					<div>
						<img
							src="_BASEURL.'/site/images/eyal.jpg'"
							alt="eyal-gershon"
							cms:eval="src"
							/>
						<p><cms:text constant="about_eyal"/></p>
					</div>
				</cms:desktop>
			</header>

			<cms:mobile>
				<div class="about">
					<img
						src="_BASEURL.'/site/images/eyal.jpg'"
						alt="eyal-gershon"
						cms:eval="src"
						/>
					<p><cms:text constant="about_eyal"/></p>
				</div>
			</cms:mobile>

			<ul id="features">
				<cms:module
					name="articles"
					action="show_list"
					group="features"
					template="stock/features_generic.xml"
					>
					<param name="title" value=""/>
				</cms:module>
			</ul>

			<div id="form_wrap">
				<h4><cms:text constant="form_title"/></h4>
				<span class="sign-up"><cms:text constant="sign-up"/></span>
				<cms:module
					name="contact_form"
					action="show"
					text_id="contact"
					/>
			</div>

			<cms:desktop>
				<div class="floating_form">
					<cms:module
						name="contact_form"
						action="show"
						text_id="contact"
						/>
				</div>
			</cms:desktop>

			<footer>
				<!-- copyright -->
				<cms:template file="stock/copyright.xml">
					<param name="holder" value="copyright_holder"/>
					<param name="text" value="copyright_text"/>
					<param name="light" value="1"/>
				</cms:template>
			</footer>
		</body>
	</html>
</document>
